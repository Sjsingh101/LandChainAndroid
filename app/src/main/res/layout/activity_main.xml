<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include  layout="@layout/l1" android:id="@+id/id1"  android:visibility="visible"/>
    <include  layout="@layout/l2" android:id="@+id/id2" android:visibility="invisible"/>
    <include  layout="@layout/l3" android:id="@+id/id3" android:visibility="invisible"/>
    <include  layout="@layout/l4" android:id="@+id/id4" android:visibility="invisible"/>
    <include  layout="@layout/l5" android:id="@+id/id5" android:visibility="invisible"/>





    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>